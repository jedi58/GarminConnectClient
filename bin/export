#!/usr/bin/env php
<?php

include_once __DIR__ . '/../vendor/autoload.php';

use Buzz\Browser;
use Buzz\Client\Curl;
use Endurance\Exporter\GarminConnect\GarminConnectExporter;

$username = $argv[1];
$password = $argv[2];
$exportPath = isset($argv[3]) ? $argv[3] : __DIR__ . '/../activities';

// Create the export directory if it doesn't exist
if (!is_dir($exportPath)) {
    mkdir($exportPath, 0755, true);
}

$browser = new Browser(new Curl());

try {
    $exporter = new GarminConnectExporter($browser, $username, $password);
    $activities = $exporter->fetchActivities($username, 100);
    foreach ($activities as $activity) {
        $exporter->downloadActivityTCX($activity->getId(), $exportPath . '/' . $activity->getId() . '.tcx');
        print sprintf("Downloading %s (%s)\n", $activity->getId(), $activity->getStartTimeGMT()->format('c'));
    }
} catch (RuntimeException $exception) {
    print sprintf("Error: %s\n", $exception->getMessage());
}
